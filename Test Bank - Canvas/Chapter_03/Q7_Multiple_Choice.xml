      </simpleChoice>
      <simpleChoice identifier="C2">
        <span>Asking them to identify their deviant behavior</span>
      </simpleChoice>
      <simpleChoice identifier="C3">
        <span>Allowing them to identify themselves easily in the final report</span>
      </simpleChoice>
      <simpleChoice identifier="C4">
        <span>Asking them to provide demographic information</span>
      </simpleChoice>
    </choiceInteraction>
  </itemBody>
  <responseProcessing>
    <responseCondition>
      <responseIf>
        <match>
          <variable identifier="RESPONSE" />
          <correct identifier="RESPONSE" />
        </match>
        <setOutcomeValue identifier="SCORE">
          <baseValue baseType="integer">1</baseValue>
        </setOutcomeValue>
      </responseIf>
      <responseElse>
        <setOutcomeValue identifier="SCORE">
          <baseValue baseType="integer">0</baseValue>
        </setOutcomeValue>
      </responseElse>
    </responseCondition>
  </responseProcessing>
</assessmentItem>