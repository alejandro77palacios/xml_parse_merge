  <itemBody>
    <choiceInteraction responseIdentifier="RESPONSE" shuffle="true" maxChoices="1">
      <prompt>
        <span>Which of the following is POOR advice for a qualitative field interviewer?</span>
      </prompt>
      <simpleChoice identifier="C0">
        <span>Learn to listen, think, and talk almost at the same time.</span>
      </simpleChoice>
      <simpleChoice identifier="C1">
        <span>Be more interested than interesting.</span>
      </simpleChoice>
      <simpleChoice identifier="C2">
        <span>Do not deviate from the schedule of preestablished questions.</span>
      </simpleChoice>
      <simpleChoice identifier="C3">
        <span>Don't try to halt your respondent's line of discussion even if it's not on topic.</span>
      </simpleChoice>
      <simpleChoice identifier="C4">
        <span>Adopt the role of the “socially acceptable incompetent.”</span>
      </simpleChoice>
    </choiceInteraction>
  </itemBody>
  <responseProcessing>
    <responseCondition>
      <responseIf>
        <match>
          <variable identifier="RESPONSE" />
          <correct identifier="RESPONSE" />
        </match>
        <setOutcomeValue identifier="SCORE">
          <baseValue baseType="integer">1</baseValue>
        </setOutcomeValue>
      </responseIf>
      <responseElse>
        <setOutcomeValue identifier="SCORE">
          <baseValue baseType="integer">0</baseValue>
        </setOutcomeValue>
      </responseElse>
    </responseCondition>
  </responseProcessing>
